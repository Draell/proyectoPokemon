<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue4"
    tools:context=".fragments.RightFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/etBuscarPoke"
        android:hint="BUSCAR EN LA POKEDEX"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnBuscar"
        />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        app:icon="?android:attr/actionModeWebSearchDrawable"
        app:layout_constraintLeft_toRightOf="@+id/etBuscarPoke"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_pokemon_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text=""
        android:textSize="25sp"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etBuscarPoke"
        />


    <ImageView
        android:id="@+id/detec"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/detective"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/ivSprite"
        android:layout_width="150dp"
        android:layout_height="239dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pokemon_info"
        />

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="280dp"
        app:icon="@drawable/pball3"
        android:layout_marginRight="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pokemon_info"
        />

    <TextView
        android:id="@+id/tvID"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBuscarPoke"
        />

    <TextView
        android:id="@+id/tipoL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_pokemon_info"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/hpL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tipoL"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/atkL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/hpL"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/spatkL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/atkL"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/defL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/spatkL"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/spdefL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/defL"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/spdL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/spdefL"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/weightL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/spdL"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/purp2"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/tipoL"
        app:layout_constraintTop_toBottomOf="@id/tv_pokemon_info"
        />

    <TextView
        android:id="@+id/hp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/purp2"
        app:layout_constraintLeft_toRightOf="@id/hpL"
        app:layout_constraintTop_toBottomOf="@id/tipo"
        />

    <TextView
        android:id="@+id/atk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/purp2"
        app:layout_constraintLeft_toRightOf="@id/atkL"
        app:layout_constraintTop_toBottomOf="@id/hp"
        />

    <TextView
        android:id="@+id/spatk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/purp2"
        app:layout_constraintLeft_toRightOf="@id/spatkL"
        app:layout_constraintTop_toBottomOf="@id/atk"
        />

    <TextView
        android:id="@+id/def"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/purp2"
        app:layout_constraintLeft_toRightOf="@id/defL"
        app:layout_constraintTop_toBottomOf="@id/spatk"
        />

    <TextView
        android:id="@+id/spdef"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/purp2"
        app:layout_constraintLeft_toRightOf="@id/spdefL"
        app:layout_constraintTop_toBottomOf="@id/def"
        />

    <TextView
        android:id="@+id/spd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/purp2"
        app:layout_constraintLeft_toRightOf="@id/spdL"
        app:layout_constraintTop_toBottomOf="@id/spdef"
        />

    <TextView
        android:id="@+id/weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/purp2"
        app:layout_constraintLeft_toRightOf="@id/weightL"
        app:layout_constraintTop_toBottomOf="@id/spd"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
